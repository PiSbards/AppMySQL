<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMySQL.PageUpDel" Title="Editar/Apagar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="NOME" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtNome" Keyboard="Default" Text="{Binding nome, Mode=TwoWay}"/>
            <Label Text="IDADE" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtIdade" Keyboard="Default" Text="{Binding idade, Mode=TwoWay}"/>
            <Label Text="CIDADE" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="txtCidade" Keyboard="Default" Text="{Binding cidade, Mode=TwoWay}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="ATUALIZAR" BackgroundColor="White" FontAttributes="Bold" x:Name="btnAtualizar" Clicked="btnAtualizar_Clicked" CornerRadius="10"/>
                <Button Text="EXLCUIR" BackgroundColor="Red" TextColor="White" FontAttributes="Bold" x:Name="btnApagar" Clicked="btnApagar_Clicked" CornerRadius="10"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>